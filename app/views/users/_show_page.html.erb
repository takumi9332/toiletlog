<div class="contents row" id="pagenate">
  <p><%= @name %>さんの投稿一覧</p>
  <ul class="toilet_lists">
  <% @toilets.each do |toilet| %>
    <li class="toilet_list">
    <%= link_to toilet_path(toilet.id) do %>
    <%= image_tag toilet.image, class: "toilet-img" %>
    <div id="star-rate<%= toilet.id%>">Avg.</div>

      <script>
        $('#star-rate<%= toilet.id%>').raty({
          size : 36,
          starOff : '<%= asset_path('star-off.png') %>',
          starOn : '<%= asset_path('star-on.png') %>',
          starHalf : '<%= asset_path('star-half.png') %>',
          half : true,
          readOnly: true,
          score: '<%= toilet.comments.average(:rate).to_f.round(1) %>',
        });
      </script>

    <% end %>
  <% end %>
  </li>
  </ul>
  <%= paginate @toilets, remote: true, param_name: 'post_page' %>

  <% if @favorites.present? %>
  <p><%= @name %>さんのブックマーク一覧</p>
  <ul class="toilet_lists">
  <% @favorites.each do |toilet| %>
    <li class="toilet_list">
    <%= link_to toilet_path(toilet.id) do %>
    <%= image_tag toilet.image, class: "toilet-img" %>
    <div id="star-rate<%= toilet.id%>">Avg.</div>

      <script>
        $('#star-rate<%= toilet.id%>').raty({
          size : 36,
          starOff : '<%= asset_path('star-off.png') %>',
          starOn : '<%= asset_path('star-on.png') %>',
          starHalf : '<%= asset_path('star-half.png') %>',
          half : true,
          readOnly: true,
          score: '<%= toilet.comments.average(:rate).to_f.round(1) %>',
        });
      </script>

    <% end %>
  <% end %>
  </li>
  </ul>
  <%= paginate @favorites, remote: true, param_name: 'favorite_page' %>
  <% end %>
</div>